include _layout.pug

div(id='page_content' class='content')
    h2(style='margin-top: 20px;')
        | Feedback

    br
    .w3-container.w3-card-4.w3-light-grey
        form(method='POST', action='/feedback')
            p
                label Email:
                input(class='w3-input w3-border w3-round-large', name='email', type='text' required)

            p
                label Comment:
                textarea(class='w3-input w3-border w3-round-large', name='comment', type='text', rows='5', maxlength="500" required)

            p
                br
                input.w3-btn(type='submit', value='Send', style="background-color: rgb(140, 187, 251); color: white;")
    
    script.
        $('#menu_feedback').addClass('active');
